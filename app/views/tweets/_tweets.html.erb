<div class="column ">
<article class="media-box">
<figure class="media-left">
<p class="image is-64x64">
  <img src="https://bulma.io/images/placeholders/64x64.png">
  </p>
</figure>
<div class="media-content">
<% if current_user%>
<small> Hey <%= current_user.email%></small> <br/>
<%end%>
</div>

</article>
</div>


<div class="column is-two-thirds ">
<%= render "form"%>


<% @tweets.each do |item| %>
<div class="box">
<article class="media">
<div class="media-left">
<figure class="image is-64x64">
  <img src="https://bulma.io/images/placeholders/64x64.png">
  </figure>
</div>
<div class="media-content">
<div class="content">
<strong> Andrew Carnergie</strong><br/>
<% if current_user%>
<small><%= current_user.email%></small> <br/>
<%end%>
<p class="mb-1">
 <%=item.tweeet%>
</p>

<nav class="level">
<div class="level-left is-mobile">
<%=  link_to  tweet_path(item),class:"level-item"  do %>
<i class="fa fa-eye" aria-hidden="true"></i>
<%end%>


<%= link_to  edit_tweet_path(item)  ,class:"level-item"  do %>
<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
<%end%>
<%= link_to  item, method:  :delete,data:{confirm:"Are you sure you want to delete this tweet"} ,class:"level-item ",id:"del"  do %>
<i class="fa fa-trash-o  "  id="del_btn" aria-hidden="true"></i> <%end%>
</div>





</nav>
</div>
</div>

</article>
</div>

<% end %>
</div>
