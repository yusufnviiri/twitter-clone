<div class="column  is-one-fifth ">
<article class="media-box">
<figure class="media-left">
<% if user_signed_in?%>
<nav class="panel ">
<p class="panel-heading  my-1 p-0 "> Hey Joe</p>
<div class="level m-0 p-0  ">

<p class="image is-64x64  level-left ">
  <img src="https://bulma.io/images/placeholders/64x64.png"> 

  </p>
   <small class=" level-item "> <%= current_user.username%></small>
      <small class=" level-item ">  <%= current_user.email%></small>

  </div>
  <div >
  <div class="follow">
  <p >
  Following</p></div>

 
<div class="level ml-2 p-0 ">

<div class="columns " id="user_details">
<p class="column mr-3 p-0 "> Tweets
<span class="is-block"><%=  @user_tweets%> </span>

</p>
<p class="column mr-2 p-0"> Following
<span class="is-block">67k</span>
</p><p class="column mr-2 p-0"> Followers
<span  class="is-block">677k</span>

</p>
</div>

</div>


</figure>



<%end%>



</nav>



</article>
<%= render "menu"%>

</div>


<div class="column is-two-thirds ">
<% if user_signed_in?%>

<%= render "form"%>
<% end %>


<% @tweets.each do |item| %>
<div class="box">
<article class="media">
<div class="media-left">
<figure class="image is-64x64">
  <img src="https://bulma.io/images/placeholders/64x64.png">
  </figure>
</div>
<div class="media-content">
<div class="content">
<strong> Andrew Carnergie</strong><br/>
<% if current_user%>
<small><%= item.user.username%></small> <br/>

<small><%= item.user.email%></small> <br/>
<%end%>
<p class="mb-1">
 <%=item.tweeet%>
</p>

<nav class="level">
<div class="level-left is-mobile">
<% if user_signed_in?%>
<% if current_user.username==item.user.username%>
<%=  link_to  tweet_path(item),class:"level-item"  do %>
<i class="fa fa-eye" aria-hidden="true"></i>

<% end %>


<%= link_to  edit_tweet_path(item)  ,class:"level-item"  do %>
<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
<%end%>

<%= link_to  item, method:  :delete,data:{confirm:"Are you sure you want to delete this tweet"} ,class:"level-item ",id:"del"  do %>
<i class="fa fa-trash-o  "  id="del_btn" aria-hidden="true"></i> <%end%>
<% end %>
<%end%>
</div>





</nav>
</div>
</div>

</article>
</div>

<% end %>
</div>
